{
  "name": "platformsh-docs",
  "version": "1.0.0",
  "description": "This repository holds the public user documentation and supporting services for [Platform.sh](https://platform.sh/).",
  "license": "CC-BY-NC-SA-4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platformsh/platformsh-docs.git"
  },
  "author": "Platform.sh",
  "scripts": {
    "prepare": "husky install",
    "check-links": "remark --no-config --quiet --frail --use validate-links --ignore-pattern '**/varnish.md' --ignore-pattern '**/vault.md' --ignore-pattern '**/nodejs/_index.md' docs/src",
    "lint-prose": "find . -type f -name '*.md' ! -path '*/node_modules/*' ! -name 'LICENSE.md' ! -path '*/avocadocs/*' ! -name 'lorem.md' ! -path '*/docsuikit/*' | xargs vale"
  },
  "workspaces": [
    "docs"
  ],
  "devDependencies": {
    "husky": "^8.0.1",
    "remark-cli": "^11.0.0",
    "remark-validate-links": "^12.0.0"
  }
}
