{
  "name": "platformsh-docs-whitelabel",
  "version": "1.0.0",
  "description": "This repository holds the public user documentation for white-labeled [Platform.sh](https://platform.sh/).",
  "license": "CC-BY-NC-SA-4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platformsh/platformsh-docs.git"
  },
  "main": "gulpfile.js",
  "author": "Platform.sh",
  "scripts": {
    "build": "npm run fetch-files && npm run registry-files",
    "build:assets": "postcss --use cssnano --no-map --output 'public/asciinema/asciinema-player-mini.css' 'public/asciinema/asciinema-player.css' && postcss --use cssnano --no-map --output 'public/css/main-mini.css' 'public/css/main.css' && postcss --use cssnano --no-map --output 'public/css/syntax-highlighting-mini.css' 'public/css/syntax-highlighting.css' && postcss --use cssnano --no-map --output 'public/css/vendor-mini.css' 'public/css/vendor.css'",
    "build:search": "npm run build --workspace docs-search-input",
    "dev": "npm run fetch-files && npm run registry-files",
    "fetch-files": "node utils/fetch-examples.mjs && node utils/fetchTemplates.mjs",
    "lint:markdown": "eslint src",
    "lint:prose": "find . -type f -name '*.md' ! -path '*/node_modules/*' ! -name 'LICENSE.md' ! -path '*/avocadocs/*' ! -name 'lorem.md' ! -path '*/docsuikit/*' | xargs vale",
    "registry-files": "node utils/updateExampleConfigFiles.js"
  },
  "devDependencies": {
    "cssnano": "^5.1.14",
    "eslint": "^8.34.0",
    "eslint-plugin-mdx": "^2.0.5",
    "p-limit": "^4.0.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "pshregistry-parser": "^1.5.7",
    "remark": "^14.0.2",
    "remark-cli": "^11.0.0",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-preset-lint-consistent": "^5.1.1",
    "remark-preset-lint-markdown-style-guide": "^5.1.2",
    "remark-preset-lint-recommended": "^6.1.2"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "alpinejs": "^3.11.1",
    "asciinema-player": "^3.0.1",
    "autoprefixer": "^10.4.13",
    "axios": "^1.6.0",
    "express": "^4.19.2",
    "fs-extra": "^11.1.1",
    "js-yaml": "^4.1.0",
    "mermaid": "^9.3.0",
    "mysql2": "^3.9.8",
    "octokit": "^3.1.2",
    "platformsh-config": "^2.4.1",
    "tailwindcss": "^3.2.6"
  },
  "workspaces": [
    "static/scripts/xss",
    "../themes/psh-docs"
  ],
  "remarkConfig": {
    "plugins": [
      "remark-frontmatter",
      "remark-gfm",
      "remark-preset-lint-consistent",
      "remark-preset-lint-recommended",
      "remark-preset-lint-markdown-style-guide",
      [
        "remark-lint-maximum-line-length",
        140
      ],
      [
        "remark-lint-ordered-list-marker-value",
        "ordered"
      ],
      [
        "remark-lint-no-file-name-irregular-characters",
        "\\.a-zA-Z0-9-_"
      ]
    ]
  }
}
